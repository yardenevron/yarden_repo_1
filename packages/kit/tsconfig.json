{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2020",
		"module": "es2022",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@sveltejs/kit": ["./types/index"],
			// internal use only
			"types": ["./types/internal"]
		},
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"scripts/**/*",
		"src/**/*",
		"types/**/*",
		"../../sites/kit.svelte.dev/scripts/extract-types.js"
	],
	"exclude": ["./**/write_types/test/**"]
}
